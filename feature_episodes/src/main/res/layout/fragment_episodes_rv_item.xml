<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Episodes_item_theme"
    android:elevation="@dimen/card_elevation_def"
    app:cardCornerRadius="@dimen/card_radius_def"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_episodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/custom_rv_item_background_color">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_episode_header"
            android:layout_margin="@dimen/rv_item_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_episode_name"
            android:layout_margin="@dimen/rv_item_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_episode_header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_episode_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_episode_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/rv_item_margin"
            android:layout_marginTop="@dimen/rv_item_margin"
            android:layout_marginEnd="@dimen/rv_item_margin"
            android:layout_marginBottom="@dimen/rv_item_margin" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>